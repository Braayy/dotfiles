general {
  colors = true
  interval = 2	
}

order += "disk /"
order += "wireless _first_"
order += "cpu_temperature 0"
order += "volume master"
order += "tztime local"
order += "battery all"

battery all {
	format = "%status %percentage"
	format_down = "No battery"
	status_chr = "âš¡ CHR"

	status_bat = "ðŸ”‹ BAT"

	status_unk = "? UNK"

	status_full = "â˜» FULL"
}

